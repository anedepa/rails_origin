<% if logged_in? %>
<%= @current_user.id %>
<%= session[:user_id] %>
<%= @current_user.name %>

<p class="post"><%= link_to '記事を追加',new_article_path, class: "btn btn-primary"%></p>

<% else %>

<% end %>


<%= render 'shared/index_drop' %>

<%= will_paginate @articles, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
<br>
<div class="main">
<% @articles.each do |c| %>


  <div class="wrap">
    <a href="<%="articles/#{c.id}"%>" class="a_tag">

  <div class="stream">
  <% c.comments.first(5).each do |cl| %>
<li class="c_list" style="color:<%= cl.color %>;"><%= cl.body%></li>
<br>
<% end %>
</div>

<img src="<%= "/post_img/#{c.img_name}" %>" alt="<%="#{c.id}"%>"class="img">

</a>
</div>


<% end %>
</div>
<%= will_paginate @articles, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>



<script>
$('.a_tag').hover(
 function() {
       $(this).children('.stream').addClass('move');
 },
 function() {
     $(this).children('.stream').removeClass('move');
 }
);

</script>
<style>
body{
  background:#ec6a38;
  -webkit-animation:color 7s linear infinite;
    -moz-animation:color 7s linear infinite;
  
}
@-webkit-keyframes color{
    0%{
        background:#FFFF66
    }

    40%{
        background:#FF6600
    }

    80%{
        background:#99FFCC
    }

    100%{
        background:#FFFF66
    }
}

@-moz-keyframes color{
    0%{
        background:#FFFF66
    }

    40%{
        background:#FF6600
    }

    80%{
        background:#99FFCC
    }

    100%{
        background:#FFFF66
    }
}

</style>
